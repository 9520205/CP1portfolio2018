void setup() {
  size(500,500);
}

void draw() {
  background(255);
  
  //set center mode
  ellipseMode(CENTER);
  rectMode(CENTER);
  
  // body
  stroke(0);
  fill(0,0,125);
  rect(mouseX,mouseY+80,20,100);
  rect(mouseY,mouseX+80,20,100);
  
  // head
  fill(0,125,0);
  ellipse(mouseX,mouseY,60,60);
  ellipse(mouseY,mouseX,60,60);
  ellipse(mouseY, mouseX, 60, 60);
  ellipse(mouseY, mouseX, 60, 60);
  
  // eyes
  fill(255,0,0);
  ellipse(mouseX-22,mouseY,16,32);
  ellipse(mouseX+22,mouseY,16,32);
  ellipse(mouseY-22,mouseX,16,32);
  ellipse(mouseY+22,mouseX,16,32);
  
  // legs
  stroke(50,50,50);
  line(mouseX,mouseY,80,160);
  line(mouseX,mouseY,120,160);
  line(mouseY,mouseX,80,160);
  line(mouseY,mouseX,120,160);
}
